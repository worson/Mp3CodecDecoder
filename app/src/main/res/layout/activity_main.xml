<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <ScrollView
    android:id="@+id/vg_scrooll"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent" >
    <TextView
      android:id="@+id/tv_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"/>

  </ScrollView>

  <Button
    android:id="@+id/bt_media_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginVertical="20dp"
    android:text="MediaPlayer播放"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/vg_scrooll" />

  <Button
    android:id="@+id/bt_audio_track_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="AudioTrack播放"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/vg_scrooll" />

  <Button
    android:id="@+id/bt_mp3_to_wav"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginVertical="20dp"
    android:text="Mp3转wav"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_media_play" />

  <Button
    android:id="@+id/bt_wav_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="播放wav文件"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_media_play" />


</androidx.constraintlayout.widget.ConstraintLayout>